

<!-- home page for the users -->
<% if current_user %>
  <!-- home page for the admin -->
  <% if current_user.admin?%>
    <div class="admin-home-section">
      <div class="admin-home-item">
        <div class="admin-home-body">
          <h2 class="section-title">Admin Dashboard</h2>
          <p class="card-text">Manage Events and Users </p>
          <div class="admin-home-footer">
            <%= link_to 'View All Events', events_path, class: "btn btn-primary"%>
            <%= link_to "View All Users", users_path, class: 'btn btn-primary'%>
            <%= link_to 'Create an Event', new_event_path, class: "btn btn-primary"%>
            <%= link_to 'Update an existing Event', events_path, class: "btn btn-primary"%>
          </div>
        </div>
      </div>
    </div>
  <!-- homepage for the owners -->
  <% elsif current_user.owner? %>
