          <p class="card-text">Create new events or update existing ones</p>
          <div class="owner-home-footer">
            <%= link_to 'Create an Event', new_event_path, class: "btn btn-primary"%>
            <%= link_to 'Update an existing Event', events_path, class: "btn btn-primary"%>
          </div>
        </div>
      </div>
    </div>
  <!-- homepage for the clients -->
  <% elsif current_user.client? %>
    <%= link_to 'Find an event to book', events_path, class: "btn btn-primary"%>
  <% end %>

