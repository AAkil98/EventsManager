<div class="signup-container"  style="background-image: url('<%= asset_path 'bg.png' %>'); background-size: cover; background-position: center;">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "signup-form" }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="form-group">
        <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email", class: "form-input" } %>
      </div>

      <div class="form-group">
        <%= f.input :full_name, required: true, autofocus: true, input_html: { autocomplete: "full name", class: "form-input" } %>
      </div>

      <div class="form-group">
        <%= f.input :phone_number, required: true, autofocus: true, input_html: { autocomplete: "phone number", class: "form-input" } %>
      </div>

      <div class="form-group">
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password", class: "form-input" } %>
      </div>

      <div class="form-group">
        <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password", class: "form-input" } %>
      </div>

      <div class="form-group">
        <%= f.input :status, as: :radio_buttons, collection: [["Owner", "owner"], ["Client", "client"]], label: "Your Status", required: true, input_html: { class: "form-radio" } %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "signup-button" %>
    </div>
  <% end %>

</div>
