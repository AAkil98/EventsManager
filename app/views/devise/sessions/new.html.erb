
<div class="login-container" style="background-image: url('<%= asset_path 'bg.png' %>'); background-size: cover; background-position: center;">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
    <div class="form-inputs">
      <div class="form-group">
        <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email", class: "form-input" } %>
      </div>

      <div class="form-group">
        <%= f.input :password, required: false, input_html: { autocomplete: "current-password", class: "form-input" } %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <div class="checkbox-wrapper">
            <%= f.input :remember_me, as: :boolean, input_html: { class: "form-input" } %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "login-button" %>
    </div>
  <% end %>

  <div class="signup-link">
    <%= link_to "Sign up", new_user_registration_path, class: "signup-button" %>
    <%= link_to "Forgot your password?", new_user_password_path, class: "forgot-password-button" %>
  </div>
</div>
