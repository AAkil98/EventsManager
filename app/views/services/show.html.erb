<div class="main-service-container">
  <h1 class="service-title">Your <%= @service.title %></h1>
  <div class="service-container">
    <div class="service-card" style="background-image:url(<%= asset_path "bgig.png" %>)">
      <div>
        <form action="/submit-wedding-details" method="POST" class="wedding-form">
          <!-- Date & Time Field -->
          <label for="date_time">Date & Time:</label>
          <input type="datetime-local" id="date_time" name="date_time" required>
          <br>

          <!-- Wedding Style Field -->
          <label for="wedding_style">Wedding Style:</label>
          <select id="wedding_style" name="wedding_style" class="wedding_style" required>
            <option value="">Select a Wedding Style</option>
            <option value="classic_elegance">Classic Elegance</option>
            <option value="rustic_charm">Rustic Charm</option>
            <option value="modern_minimalism">Modern Minimalism</option>
            <option value="vintage_glamour">Vintage Glamour</option>
          </select>
          <br>

          <!-- Venue Field -->
          <label for="venue">Wedding Venue:</label>
          <select id="wedding_venue" name="wedding_venue" required>
            <option value="">Select a wedding Venue</option>
            <option value="ballrooms">Ballrooms</option>
            <option value="beachfront">Beachfront</option>
            <option value="garden_pool_estate">Garden & Pool Estate</option>
            <option value="your_home">Your Home</option>
          </select>
          <br>

          <!-- Guests Number Field -->
          <label for="guests_number">Number of Guests:</label>
          <input type="number" id="guests_number" name="guests_number" min="1" placeholder="Enter here" required>
          <br>

          <!-- Additional Details Field -->
          <label for="details">Additional Details:</label>
          <textarea id="details" name="details" rows="4" placeholder="Write here more details for your dream wedding..."></textarea>
          <br>

          <!-- Submit Button -->
          <button class="Submit" type="submit">Submit</button>
        </form>
      </div>
    </div>
  </div>
